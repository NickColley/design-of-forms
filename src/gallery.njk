---
layout: page.njk
title: Gallery
bodyClasses: max-width-100
---
<p>
    Gallery only showing images that need alternative text: {{ collections.gallery.length }}.
</p>
{% macro gallery (images, headingLevel) %}
    <div class="gallery">
        {% for image in images %}
            <a href="{{ image.href }}">
                <img src="{{ image.src }}" alt="{{ image.alt }}" loading="lazy">
            </a>
        {% endfor %}
    </div>
{% endmacro %}
{% for section, pages in collections.gallery | groupByNested("page.section") %}
    {% if section === 'Back matter' %}
        {% for pageTitle, images in pages | groupByNested("page.title")  %}
            <h2>{{ pageTitle }}</h2>
            {{ gallery(images) }}
        {% endfor %}
    {% else %}
        <h2>{{ section }}</h2>
        {% for pageTitle, images in pages | groupByNested("page.title")  %}
            <h3>{{ pageTitle }}</h3>
            {{ gallery(images) }}
        {% endfor %}
    {% endif %}
{% endfor %}
